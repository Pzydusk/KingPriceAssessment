@page
@model UserManagement.Web.Pages.Users.CreateModel

<h1>Create User</h1>

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="User.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Surname</label>
        <input class="form-control" asp-for="User.Surname" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" asp-for="User.Email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Groups</label>
        <div class="border rounded p-2">
            @if (Model.AllGroups.Count == 0)
            {
                <div class="text-muted">No groups found. Create groups first.</div>
            }
            else
            {
                foreach (var g in Model.AllGroups)
                {
                    var id = g.Id ?? Guid.Empty;

                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="SelectedGroupIds"
                               value="@id"
                               @(Model.SelectedGroupIds.Contains(id) ? "checked" : "") />
                        <label class="form-check-label">@g.Name</label>
                    </div>
                }
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Users/Index" class="btn btn-secondary">Cancel</a>
</form>
